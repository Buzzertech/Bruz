<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseColor">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/offWhite"
        android:src="@drawable/screenshot_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="EASY."
        android:textColor="@color/offWhite"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/Easy" />

    <TextView
        android:id="@+id/easy_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:text="It is even easer to share any wallpaper with your homies on just a click of the share button."
        android:textAlignment="center"
        android:textColor="@color/offWhite"
        android:textSize="12sp"
        android:layout_below="@+id/easy_desc2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/easy_desc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Easy"
        android:layout_marginTop="14dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:text="Well, it is a hell a lot easier to set a wallpaper! Just click the set button and you are off."
        android:textAlignment="center"
        android:textColor="@color/offWhite"
        android:textSize="12sp" />
</RelativeLayout>