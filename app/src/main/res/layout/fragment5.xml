<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offWhite"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/circle2"
        android:src="@drawable/checkmark2" />

    <TextView
        android:id="@+id/ALLset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="ALL SET."
        android:textColor="@color/baseColor"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/checkmark"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/happyBruzzing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ALLset"
        android:layout_marginTop="12dp"
        android:text="Go ahead and explore the world of Bruz! We wish you happy Bruzzing Wallpapers."
        android:textAlignment="center"
        android:textColor="@color/shadeColor" />

</RelativeLayout>